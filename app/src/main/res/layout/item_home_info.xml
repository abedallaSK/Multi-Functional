<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <soup.neumorphism.NeumorphTextView
        android:id="@+id/tv_title_home_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/textview"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/large_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_shadowColorDark="#33000000"
        app:neumorph_shadowColorLight="#00000000" />

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/tv_func_home_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="@string/textview"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/normal_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_shadowColorDark="#33000000"
        app:neumorph_shadowColorLight="#00000000" />


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorphCardView2"
        android:layout_width="0dp"
        android:layout_height="80sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_home_info"
        app:neumorph_backgroundColor="?attr/colorPrimary"
        app:neumorph_shadowColorDark="@color/black"
        app:neumorph_shadowColorLight="#00000000"
        app:neumorph_shapeAppearance="@style/NeumorphismCard">

        <com.nitish.typewriterview.TypeWriterView
            android:id="@+id/typeWriterView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="@string/there_are_not_new_message"
            android:textColor="?attr/colorOnPrimary" />
    </soup.neumorphism.NeumorphCardView>


    <ImageView
        android:id="@+id/im_item_info_view_page"
        android:layout_width="110sp"
        android:layout_height="0dp"
        android:layout_marginEnd="-50dp"
        android:importantForAccessibility="no"
        android:src="?attr/helperImage03"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/neumorphCardView2"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toStartOf="@+id/neumorphCardView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_home_info" />

    <View
        android:id="@+id/view10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/line"
        app:layout_constraintDimensionRatio="12:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neumorphCardView2"/>
</androidx.constraintlayout.widget.ConstraintLayout>